name: Create Release on Tag

on:
  push:
    tags:
      - 'v*'

jobs:
  create-release:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Generate Changelog
        id: changelog
        run: |
          # è·å–æœ€æ–°ä¸¤ä¸ªæ ‡ç­¾
          CURRENT_TAG=${{ github.ref_name }}
          PREVIOUS_TAG=$(git tag --sort=-v:refname --merged HEAD | grep -v "^$" | sed -n '2p')

          if [ -z "$PREVIOUS_TAG" ]; then
            # å¦‚æœæ²¡æœ‰å‰ä¸€ä¸ªæ ‡ç­¾ï¼Œä½¿ç”¨ç¬¬ä¸€ä¸ªæäº¤
            CHANGELOG=$(git log --pretty=format:"- %h: %s (%an)" --no-merges)
          else
            # è·å–ä¸¤ä¸ªæ ‡ç­¾ä¹‹é—´çš„æäº¤
            CHANGELOG=$(git log $PREVIOUS_TAG..$CURRENT_TAG --pretty=format:"- %h: %s (%an)" --no-merges)
          fi

          # å°†å¤šè¡Œè¾“å‡ºè½¬æ¢ä¸º GitHub è¾“å‡º
          echo "changelog<<EOF" >> $GITHUB_OUTPUT
          echo "$CHANGELOG" >> $GITHUB_OUTPUT
          echo "EOF" >> $GITHUB_OUTPUT

      - name: Create Release Notes
        id: release_notes
        run: |
          NOTES="## ğŸ‰ Release ${{ github.ref_name }}"
          echo "" >> RELEASE_NOTES.md
          echo "### ğŸ“ Changes" >> RELEASE_NOTES.md
          echo "${{ steps.changelog.outputs.changelog }}" >> RELEASE_NOTES.md
          echo "" >> RELEASE_NOTES.md
          echo "### ğŸ“¦ Downloads" >> RELEASE_NOTES.md
          echo "See assets below for installation files." >> RELEASE_NOTES.md

      - name: Create GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          body_path: RELEASE_NOTES.md
          draft: false
          prerelease: false
          token: ${{ secrets.GITHUB_TOKEN }}
